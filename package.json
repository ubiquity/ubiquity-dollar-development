{
  "name": "@ubiquity/dollar",
  "license": "MIT",
  "scripts": {
    "start": "run-s install-env install-contracts dev",
    "start:headless": "run-s install-env install-contracts dev:contracts",
    "install-env": "cp .env.example .env",
    "install-contracts": "run-s _contracts:install:* build:contracts",
    "build": "run-s build:*",
    "build:contracts": "run-p _contracts:build:*",
    "build:ui": "yarn next build",
    "build:fleek": "yarn install-env && yarn install-contracts && next build && next export --outdir web/dapp",
    "dev": "run-p dev:*",
    "dev:contracts": "./build-scripts/dev-chain-init.sh",
    "dev:ui": "next dev",
    "_contracts:clean": "run-p _contracts:clean:*",
    "_contracts:clean:uad": "cd ./contracts/dollar && yarn clean",
    "_contracts:clean:nft": "cd ./contracts/ubiquistick && yarn clean",
    "_contracts:install": "run-p _contracts:install:*",
    "_contracts:install:uad": "cd ./contracts/dollar && yarn",
    "_contracts:install:nft": "cd ./contracts/ubiquistick && yarn",
    "_contracts:build:uad": "cd ./contracts/dollar && yarn build",
    "_contracts:build:nft": "cd ./contracts/ubiquistick && yarn build",
    "_contracts:build:uad:artifacts": "cd ./contracts/dollar && hardhat export --export ../../fixtures/ubiquity-dollar-deployment.json --network mainnet",
    "_contracts:build:contracts-addresses-summary": "node ./build-scripts/generate_contracts_addresses.js",
    "_contracts:build:typechain": "typechain --target=ethers-v5 --out-dir ./fixtures/abi/types ./fixtures/abi/*.json",
    "contracts:run:nft": "cd ./contracts/ubiquistick && hardhat node --hostname 0.0.0.0 --fork-block-number 14800000",
    "contracts:run:faucet": "cd ./contracts/dollar && yarn node:faucet",
    "format": "run-p _format:*",
    "_format:prettier": "prettier --write .",
    "_format:eslint": "eslint . --ext .ts,.tsx --cache --fix --plugin tsc --rule 'tsc/config: [2, {configFile: \"./tsconfig.json\"}]'",
    "prepare": "husky install",
    "killscript": "kill `ps | grep dev-chain-init.sh | grep -v grep | awk '{ print $1 }'`"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*/cache/",
      "**/*/artifacts/",
      "**/*/node_modules/**/*"
    ],
    "events": {
      "config": "",
      "exit": "",
      "crash": "stop",
      "restart": "clear && printf '\\033[3J'",
      "start": "clear && printf '\\033[3J'"
    }
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.0.0",
    "@ethersproject/bytes": "^5.0.0",
    "@ethersproject/providers": "^5.0.0",
    "@svgr/webpack": "^6.1.2",
    "classnames": "^2.3.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.3"
  },
  "dependencies": {
    "@tippyjs/react": "^4.2.5",
    "@typechain/ethers-v5": "^9.0.0",
    "@types/node": "^16.7.10",
    "@types/react": "^17.0.19",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "@walletconnect/client": "^1.7.8",
    "@walletconnect/qrcode-modal": "^1.7.8",
    "@walletconnect/web3-provider": "^1.7.8",
    "autoprefixer": "^10.4.0",
    "eslint": "^7.16.0",
    "eslint-config-next": "^11.1.2",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-tsc": "^2.0.0",
    "ethers": "^5.5.4",
    "next": "^11.0.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "prettier": "2.2.1",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-dropdown-now": "^6.0.1",
    "react-error-boundary": "^3.1.4",
    "tailwindcss": "^3.0.6",
    "typechain": "^7.0.0",
    "typescript": "^4.3.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix --plugin tsc --rule 'tsc/config: [2, {configFile: \"./tsconfig.json\"}]'"
  }
}
